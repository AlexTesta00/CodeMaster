{
  "extends": [
    "config:recommended"
  ],
  "packageRules": [
    {
      "matchManagers": [
        "gradle"
      ],
      "groupName": "Gradle dependencies"
    },
    {
      "matchManagers": [
        "npm"
      ],
      "groupName": "Node.js dependencies"
    }
  ],
  "automerge": true,
  "gradle": {
    "enabled": true
  },
  "npm": {
    "enabled": true
  },
  "baseBranches": ["main"]
}
